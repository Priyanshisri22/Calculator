<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:id="@+id/txt1"
    android:layout_above="@id/btndiv"
    android:layout_alignRight="@id/btndiv"
    android:layout_marginBottom="10sp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/txt2"
        android:layout_alignRight="@id/txt1"
        android:layout_marginBottom="10sp"
        android:layout_above="@id/txt1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn9"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5sp"
        android:text="9"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn9"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5sp"
        android:id="@+id/btn8"
        android:text="8"


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:id="@+id/btn7"
        android:text="7"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn8"
        android:layout_marginLeft="5sp"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/btn7"
    android:layout_centerVertical="true"
    android:text="/"
    android:layout_marginLeft="5sp"
    android:id="@+id/btndiv"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn6"
        android:text="6"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn9"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn5"
        android:text="5"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn8"
        android:layout_marginTop="5sp"
        android:layout_toRightOf="@id/btn6"
        android:layout_marginLeft="5sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:text="4"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn7"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/btn5"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnmul"
        android:text="*"
        android:layout_centerVertical="true"
        android:layout_below="@id/btndiv"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/btn4"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:text="3"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn6"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:text="2"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn5"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/btn3"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:text="1"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn4"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/btn2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnadd"
        android:text="+"
        android:layout_centerVertical="true"
        android:layout_below="@id/btnmul"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/btn1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnclr"
        android:text="C"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn3"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn0"
        android:text="0"
        android:layout_centerVertical="true"
        android:layout_below="@id/btn2"
        android:layout_toRightOf="@id/btnclr"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnequal"
        android:text="="
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/btn0"
        android:layout_below="@id/btn1"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnsub"
        android:text="-"
        android:layout_centerVertical="true"
        android:layout_below="@id/btnadd"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="5sp"
        android:layout_toRightOf="@id/btnequal"/>

</RelativeLayout>